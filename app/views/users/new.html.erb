<!-- SIGN UP HTML PAGE -->

<div class="jumbotron">
<center>	
<h1>Sign Up</h1>
</center>

<!-- Error Message -->
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<!-- User Input fields -->
<center>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div><br>
  <div class="actions"><%= f.submit "Sign Up" %></div>
<% end %>
</center>
</div>